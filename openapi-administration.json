                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "cfsslUri",
                        "in": "query",
                        "description": "URI of CFSSL API",
                        "schema": {
                            "type": "string",
                            "default": ""
                        }
                    },
                    {
                        "name": "configPath",
                        "in": "query",
                        "description": "Path of config files of CFSSL",
                        "schema": {
                            "type": "string",
                            "default": ""
