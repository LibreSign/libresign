{
  "name": "libresign/libresign",
  "description": "libresign",
  "type": "project",
  "license": "AGPL",
  "require": {
    "jsignpdf/jsignpdf-php": "^1.1",
    "endroid/qr-code": "^4.4",
    "pagerfanta/pagerfanta": "^3.6",
    "tecnickcom/tcpdf": "^6.4",
    "iio/libmergepdf": "dev-move-tcpdi-parser-to-package"
  },
  "require-dev": {
    "byjg/swagger-test": "^3.1",
    "donatj/mock-webserver": "^2.5",
    "guzzlehttp/psr7": "^2.4",
    "mikey179/vfsstream": "^1.6",
    "nextcloud/coding-standard": "^1.0",
    "nextcloud/ocp": "dev-stable24",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest",
    "symfony/yaml": "^5.4",
    "vimeo/psalm": "^4.25"
  },
  "config": {
    "autoloader-suffix": "Libresign",
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "sort-packages": true,
    "platform": {
      "php": "7.4"
    }
  },
  "scripts": {
    "lint": "find . -name \\*.php -not -path './vendor/*' -not -path './build/*' -print0 | xargs -0 -n1 php -l",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix",
    "psalm": "psalm --threads=1"
  },
  "autoload": {
    "psr-4": {
      "OCA\\Libresign\\": "lib/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OCP\\": "vendor/nextcloud/ocp/OCP"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/LibreCodeCoop/libmergepdf"
    }
  ]
}
